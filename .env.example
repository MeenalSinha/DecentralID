# Blockchain Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Your wallet private key (NEVER commit this file with real keys!)
PRIVATE_KEY=your_wallet_private_key_here

# Deployed contract address (update after deployment)
CONTRACT_ADDRESS=0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb


# RPC Endpoints
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Sepolia Testnet RPC (recommended for testing)
SEPOLIA_RPC_URL=https://rpc.sepolia.org
# Or use Alchemy/Infura:
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Mumbai Testnet RPC (Polygon)
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Mainnet RPC (for production)
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY


# IPFS Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Pinata IPFS API keys (get free at https://pinata.cloud)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_key

# Alternative: Web3.Storage (get free at https://web3.storage)
# WEB3_STORAGE_TOKEN=your_web3_storage_token

# Alternative: NFT.Storage (get free at https://nft.storage)
# NFT_STORAGE_TOKEN=your_nft_storage_token


# Blockchain Explorers (for contract verification)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Etherscan API key (get free at https://etherscan.io/apis)
ETHERSCAN_API_KEY=your_etherscan_api_key

# Polygonscan API key (for Mumbai verification)
POLYGONSCAN_API_KEY=your_polygonscan_api_key


# Optional: Gas Reporting
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Enable gas reporter
REPORT_GAS=false

# CoinMarketCap API key (for gas price in USD)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key


